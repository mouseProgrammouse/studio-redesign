{
  "name": "studio-redesign",
  "version": "1.0.0",
  "description": "This repository contains the source code for Tanyusha Atelierâ€™s official website.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run build:client && npm run build:server",
    "start": "node dist/server.js",
    "minify:css": "cleancss -o src/public/global.min.css src/public/global.css",
    "start-dev": "nodemon dist/server.js",
    "build:prepare": "npm run build && npm run archive",
    "run:prod": "npm run build && npm ci --production --ignore-scripts && node dist/server.js",
    "archive": "tar -czf build.tar.gz dist package.json package-lock.json .env",
    "build:client": "webpack --config webpack.config.js --mode=production --config-name client ",
    "build:server": "npm run minify:css && webpack --config webpack.config.js --mode=production --config-name server",
    "dev:server": "webpack --config webpack.config.js --config-name server --mode=development --watch",
    "dev:client": "webpack --config webpack.config.js --config-name client --mode=development  --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "npx prettier . --check",
    "format:fix": "npx prettier . --write",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "npm run lint:fix",
      "npm run format:fix"
    ],
    "*.{json,css,scss,md}": [
      "npm run format:fix"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/react-slick": "^0.23.13",
    "classnames": "^2.5.1",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "i18next": "^24.2.1",
    "i18next-fs-backend": "^2.6.0",
    "i18next-http-middleware": "^3.7.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-i18next": "^15.4.0",
    "react-slick": "^0.30.3"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.1",
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.26.0",
    "@eslint/compat": "^1.2.4",
    "@types/express": "^5.0.0",
    "@types/react": "^19.0.4",
    "@types/react-dom": "^19.0.2",
    "@types/react-i18next": "^8.1.0",
    "babel-loader": "^9.2.1",
    "clean-css-cli": "^5.6.3",
    "copy-webpack-plugin": "^12.0.2",
    "dotenv-webpack": "^8.1.0",
    "eslint": "^9.17.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.3",
    "husky": "^8.0.0",
    "lint-staged": "^15.3.0",
    "nodemon": "^3.1.9",
    "ts-loader": "^9.5.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.19.1",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1",
    "webpack-node-externals": "^3.0.0"
  }
}
